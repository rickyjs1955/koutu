{
  "name": "@koutu/backend",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "migrate": "tsx scripts/runMigrations.ts",
    "migrate:test": "cross-env DATABASE_URL=postgresql://postgres:password@localhost:5433/koutu_test tsx scripts/runMigrations.ts",
    "seed": "ts-node scripts/seedDatabase.ts",
    "setup-db": "npm run migrate && npm run seed",
    
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs --selectProjects unit",
    "test:integration": "jest --config jest.config.cjs --selectProjects integration --runInBand",
    "test:integration:single": "jest --config jest.config.cjs --testPathPattern",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:int": "cross-env NODE_ENV=test jest --testMatch='**/*.int.test.ts' --runInBand",
    "test:firebase": "jest --testPathPattern='firebase.*\\.test\\.(js|ts)$' --no-cache",
    "test:clean": "rimraf dist && jest --no-cache",
    "test:image-service": "cross-env NODE_ENV=test jest --testMatch='**/imageService.int.test.ts' --runInBand --verbose",
    
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test-up": "docker-compose up -d postgres-test",
    "docker:test-down": "docker-compose stop postgres-test",
    "docker:test-clean": "docker-compose down -v postgres-test",
    "docker:logs": "docker-compose logs",
    "docker:logs:postgres": "docker-compose logs postgres-test",
    "docker:logs:firebase": "docker-compose logs firebase-emulator",
    
    "test:setup": "npm run docker:test-up && sleep 5 && npm run migrate:test",
    "test:full": "npm run test:setup && npm run test:int",
    
    "db:connect": "docker exec -it koutu-postgres-test psql -U postgres -d koutu_test",
    "db:reset": "docker-compose restart postgres-test"
  },
  "dependencies": {
    "@koutu/shared": "*",
    "@prisma/client": "^6.7.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "firebase-admin": "^12.0.0",
    "@google-cloud/storage": "^7.7.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.0",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0",
    "zod": "^3.21.4",
    "firebase-tools": "^12.9.1",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.1",
    "@types/passport": "^1.0.12",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.1",
    "prisma": "^6.7.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typescript": "^5.1.6",
    "@firebase/rules-unit-testing": "^3.0.0"
  }
}